@model Negocio.DTO.CategoriasDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row justify-content-center top">
        <div class="col-md-8 col-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <h4>Crear categorias</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NombreCategoria, htmlAttributes: new { @class = "control-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NombreCategoria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NombreCategoria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="carg-footer form-group">
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <input type="submit" value="Crear" class="btn btn-success" />
                                @Html.ActionLink("Volver a la lista", "Index", "", new { @class = "btn btn-info" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

