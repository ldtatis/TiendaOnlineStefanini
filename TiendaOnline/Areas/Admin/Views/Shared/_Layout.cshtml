@using TiendaOnline.Models;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <ul class="nav justify-content-center">
        <li class="nav-item"><a href="@Url.Action("Index", "Categorias")" class="nav-link"> Categorias</a></li>
        <li class="nav-item"><a href="@Url.Action("Index", "Productos")" class="nav-link"> Productos</a></li>
        <li class="nav-item"><a href="@Url.Action("Index", "Clientes")" class="nav-link"> Clientes</a></li>
        <li class="nav-item"><a href="@Url.Action("Index", "Pedidos")" class="nav-link"> Pedidos</a></li>
    </ul>
    <hr />
    <div class="container" style="margin-top: 2%">
        @if (TempData["UserMessage"] != null)
        {
            var message = (MessageVM)TempData["UserMessage"];
            <div class="alert @message.CssClassName" role="alert">
                <h4>@message.Title</h4>
                <p>@message.Message</p>
            </div>
        }
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
